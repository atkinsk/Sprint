<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sn1006.atkins.sprint.MainActivity">

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx.xx"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yy.yy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/latitude"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/latitudeDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx.Diff"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/longitudeDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yy.Diff"
        app:layout_constraintTop_toBottomOf="@+id/longitude"
        app:layout_constraintLeft_toRightOf="@+id/latitudeDifference"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"  />

    <TextView
        android:id="@+id/latMaxDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx.MaxDiff"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/latitudeDifference"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/LongMaxDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yy.MaxDiff"
        app:layout_constraintLeft_toRightOf="@+id/latMaxDiff"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/longitudeDifference" />

    <TextView
        android:id="@+id/LatAvgDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx.AvgDiff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toBottomOf="@+id/latMaxDiff"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/LongAvgDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yy.AvgDiff"
        app:layout_constraintLeft_toRightOf="@+id/LatAvgDiff"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LongMaxDiff" />

    <TextView
        android:id="@+id/AvgLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AvgLat"
        app:layout_constraintLeft_toRightOf="@+id/longitude"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/AvgLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AvgLong"
        app:layout_constraintLeft_toRightOf="@+id/AvgLat"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/gpsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumUpdates"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LatAvgDiff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/LatAvgDiff" />

    <TextView
        android:id="@+id/distTravelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DistTravelled"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gpsCounter" />

    <TextView
        android:id="@+id/distWaypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DistWaypoint"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distTravelled"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/zoneStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zoneStatus"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distWaypoint"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timer"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        tools:layout_editor_absoluteX="169dp" />
    <TextView
        android:id="@+id/bearingToWaypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bearingToWaypoint"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoneStatus"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
