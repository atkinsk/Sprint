<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sn1006.atkins.sprint.MainActivity">

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx.xx"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yy.yy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/latitude"
        android:layout_marginLeft="10dp" />

     <TextView
        android:id="@+id/gpsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumUpdates"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/latitude"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/latitude" />


    <TextView
        android:id="@+id/distWaypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DistWaypoint"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gpsCounter"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/zoneStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zoneStatus"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distWaypoint"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/bearingToWaypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bearingToWaypoint"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoneStatus"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
