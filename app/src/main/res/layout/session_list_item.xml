<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_marginTop="8dp"
    android:background="@color/colorAccent"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Name"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Time"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/driverName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/driverName" />

    <TextView
        android:id="@+id/sessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Name"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dateTime"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/dateTime" />

    <TextView
        android:id="@+id/numOfLaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laps: #"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/bestLap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Lap Time"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/numOfLaps"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/avgLap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Lap Time"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bestLap"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>